  "license": "Apache-2.0",
  "main": "main.js",
  "types": "main.d.ts",
  "scripts": {
    "fix": "eslint --fix '*.mts'",
    "lint": "eslint '*.mts'",
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "compile": "tsc -p tsconfig-build.json",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "universal": "napi universal",
    "versions": "napi version"
  },
  "engines": {
    "node": ">= 10"
  },
  "napi": {
    "name": "node",
    "triples": {}
  },
  "jest": {
    "testMatch": ["**/*.test.mjs"],
    "moduleFileExtensions": ["js", "mjs"]
  },
  "devDependencies": {
    "@napi-rs/cli": "2.16.3",
    "@types/jest": "29.5.5",
    "@types/tmp": "0.2.4",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "eslint": "8.50.0",
    "jest": "29.7.0",
    "tmp": "0.2.1",
    "typescript": "5.2.2"
  },
  "optionalDependencies": {
    "@stencila/node-darwin-x64": "0.0.0",
    "@stencila/node-linux-x64-gnu": "0.0.0",
    "@stencila/node-win32-x64-msvc": "0.0.0"
  },
  "dependencies": {
    "@stencila/types": "../typescript"
  }
