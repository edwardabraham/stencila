{
  "type": "module",
  "scripts": {
    "format": "prettier --write '**/*.{js,json,md,ts,yaml}'",
    "lint": "eslint --fix '**/*.{js,ts}'",
    "build": "npm run build:json-schema && npm run build:json-ld && npm run build:python && npm run build:r && npm run build:rust && npm run build:typescript && npm run build:docs",
    "build:json-schema": "ts-node --esm src/json-schema.ts",
    "build:json-ld": "ts-node --esm src/json-ld.ts",
    "build:python": "ts-node --esm src/python.ts",
    "build:r": "ts-node --esm src/r.ts",
    "build:rust": "ts-node --esm src/rust.ts",
    "build:typescript": "ts-node --esm src/typescript.ts",
    "build:docs": "ts-node --esm src/docs.ts"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "fast-clone": "^1.5.13",
    "js-yaml": "^4.1.0",
    "json-schema": "^0.4.0",
    "prettier": "^2.8.0",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "dependencies": {
    "ajv": "^8.11.2"
  }
}
