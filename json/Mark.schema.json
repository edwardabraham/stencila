{
  "$schema": "https://stencila.dev/meta.schema.json",
  "$id": "https://stencila.dev/Mark.schema.json",
  "@id": "stencila:Mark",
  "title": "Mark",
  "extends": [
    "Entity"
  ],
  "category": "prose",
  "abstract": true,
  "description": "Abstract base class for nodes that mark some other inline content\nin some way (e.g. as being emphasised, or quoted).\n",
  "required": [
    "type",
    "content"
  ],
  "core": [
    "id"
  ],
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The type of this item",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\n",
      "type": "string"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "strip": [
        "id"
      ],
      "html": {
        "attr": "id"
      },
      "type": "string"
    },
    "content": {
      "@id": "stencila:content",
      "description": "The content that is marked.",
      "strip": [
        "types"
      ],
      "type": "array",
      "items": {
        "$ref": "Inline.schema.json"
      }
    }
  }
}