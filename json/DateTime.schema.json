{
  "$schema": "https://stencila.dev/meta.schema.json",
  "$id": "https://stencila.dev/DateTime.schema.json",
  "@id": "schema:DateTime",
  "title": "DateTime",
  "extends": [
    "Entity"
  ],
  "category": "data",
  "description": "A combination of date and time of day in the form `[-]CCYY-MM-DDThh:mm:ss[Z|(+|-)hh:mm]`.",
  "proptest": {},
  "required": [
    "type",
    "value"
  ],
  "core": [
    "id"
  ],
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The type of this item",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\n",
      "type": "string"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "strip": [
        "id"
      ],
      "html": {
        "attr": "id"
      },
      "type": "string"
    },
    "value": {
      "@id": "schema:value",
      "description": "The date as an ISO 8601 string.",
      "proptest": {
        "min": {
          "description": "Generate a fixed date-time string.",
          "value": "String::from(\"2022-02-22T22:22:22\")"
        },
        "low": {
          "description": "Generate a random date-time string.",
          "regex": "\\d{4}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d\\.\\d+([+-][0-2]\\d:[0-5]\\d|Z)"
        },
        "high": {
          "description": "Generate a random string of up to 20 alphanumeric characters, colons & hyphens.",
          "regex": "[a-zA-Z0-9\\-:]{1,20}"
        },
        "max": {
          "description": "Generate an arbitrary string.",
          "strategy": "String::arbitrary()"
        }
      },
      "type": "string",
      "format": "date-time"
    }
  }
}