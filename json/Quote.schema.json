{
  "$schema": "https://stencila.dev/meta.schema.json",
  "$id": "https://stencila.dev/Quote.schema.json",
  "@id": "stencila:Quote",
  "title": "Quote",
  "extends": [
    "Mark"
  ],
  "category": "prose",
  "description": "Inline, quoted content.",
  "html": {
    "elem": "q"
  },
  "markdown": {
    "format": "<q>{content}</q>"
  },
  "required": [
    "type",
    "content"
  ],
  "core": [
    "id",
    "cite"
  ],
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The type of this item",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\n",
      "type": "string"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "strip": [
        "id"
      ],
      "html": {
        "attr": "id"
      },
      "type": "string"
    },
    "content": {
      "@id": "stencila:content",
      "description": "The content that is marked.",
      "type": "array",
      "items": {
        "$ref": "Inline.schema.json"
      }
    },
    "cite": {
      "@id": "stencila:cite",
      "description": "The source of the quote.",
      "anyOf": [
        {
          "$ref": "Cite.schema.json"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    }
  }
}