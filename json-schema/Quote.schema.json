{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/stencila/stencila/main/json-schema/Quote.schema.json",
  "title": "Quote",
  "@id": "stencila:Quote",
  "extends": "Mark",
  "status": "stable",
  "description": "Inline, quoted content.",
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The name of the type",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\nIt is extended with the titles of all descendant types during\nthe generation of schema.json files.\n",
      "type": "string",
      "enum": [
        "Quote"
      ],
      "default": "Quote",
      "from": "Entity"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "type": "string",
      "from": "Entity"
    },
    "content": {
      "@id": "stencila:content",
      "description": "The content that is marked.",
      "type": "array",
      "items": {
        "$ref": "InlineContent.schema.json"
      },
      "from": "Mark",
      "isArray": true
    },
    "cite": {
      "@id": "stencila:cite",
      "description": "The source of the quote.",
      "anyOf": [
        {
          "$ref": "Cite.schema.json"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "from": "Quote"
    }
  },
  "source": "https://github.com/stencila/stencila/blob/main/schema/yaml/Quote.yaml",
  "children": [],
  "descendants": [],
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "content"
  ],
  "propertyAliases": {}
}