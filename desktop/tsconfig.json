{
  "extends": "@stencila/dev-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "module": "esnext",
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./src/main",
    "./src/index.ts",
    "./src/preload",
    "./src/i18n",
    "./src/lib.d.ts"
  ]
}
